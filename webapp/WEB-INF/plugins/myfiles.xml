<?xml version="1.0" encoding="UTF-8"?>
<plug-in>
    <name>myfiles</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>1.0.0</version>
    <documentation></documentation>
    <installation></installation>
    <changes></changes>
    <user-guide></user-guide>
    <description>myfiles.plugin.description</description>
    <provider>myfiles.plugin.provider</provider>
    <provider-url>http://lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/feature_default_icon.png</icon-url>
    <copyright>Copyright (c) 2017 City of Paris</copyright>
    <db-pool-required>1</db-pool-required>
    
    <core-version-dependency>
        <min-core-version>4.1.0</min-core-version>
        <max-core-version/>	
    </core-version-dependency>

    <!-- Admin features parameters -->
    <admin-features>
    </admin-features>    

    <!-- XPages parameters -->
    <applications>
        <application>
            <application-id>myfiles</application-id>
            <application-class>fr.paris.lutece.plugins.myfiles.web.MyFilesApp</application-class>
        </application>
    </applications>

    <!-- Portlet parameters -->
    <portlets>
   </portlets>

    <!-- Servlets -->
    <servlets>
    	<servlet>
    		<servlet-name>Download</servlet-name>
    		<servlet-class>fr.paris.lutece.plugins.myfiles.web.servlet.Download</servlet-class>
    		<url-pattern>/servlet/plugins/myfiles/download</url-pattern>
    	</servlet>
    </servlets>

</plug-in>